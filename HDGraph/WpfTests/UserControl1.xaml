<UserControl x:Class="WpfTests.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <StackPanel>
        <Canvas Width="200" Height="100" Background="Cyan"/>
        <Rectangle Margin="31,44,27,54" Height="50">
            <Rectangle.Fill>
                <DrawingBrush Viewport="0,0,10,10"
                              ViewportUnits="Absolute" 
                              TileMode="Tile">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing Brush="LightGray">
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <EllipseGeometry Center="0,0" RadiusX="1" RadiusY="1" />
                                    <!--<EllipseGeometry Center="3,3" RadiusX="1" RadiusY="1" />-->
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Pen>
                                <Pen Thickness="1" Brush="White" />
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Rectangle.Fill>
        </Rectangle>
    </StackPanel>
</UserControl>
